<core:FragmentDefinition xmlns="sap.m" 
                         xmlns:core="sap.ui.core"                          
                         xmlns:html="http://www.w3.org/1999/xhtml"                          
						 xmlns:form="sap.ui.layout.form" 
                         width="100%">
    <Dialog title="{i18n>inputFieldDialogTitle}" id="dialog1">
		<content>
			<form:SimpleForm				
				editable="true">
				<form:content>
					<Label text="{i18n>colAUFKT}" id="text9" required="true"/>
					<Input  id="__inputCRUD0" 
							type="Number" 
							placeholder="Geben Sie 2 Ziffern ein" 
							liveChange="createValidation" 
							valueLiveUpdate="true" 
							valueStateText="Geben Sie nicht mehr als 2 Zahlen ein"/>
					<Label text="{i18n>colAUENTTYP}"  id="text10" />
					<Input  id="__inputCRUD1" 
							placeholder="Geben Sie 1 Zeichen ein" 
							liveChange="createValidation" 
							valueLiveUpdate="true" 
							valueStateText="Nicht mehr als 1 Zeichen eingeben"/>
					<Label text="{i18n>colAUENT}"  id="text11" />
					<Input  id="__inputCRUD2"  
							liveChange="createValidation" 
							valueLiveUpdate="true" 
							valueStateText="Geben Sie nicht mehr als 60 Zeichen ein"/>
					<Label  text="{i18n>colAUWERT}" id="text12" />
					<Input  id="__inputCRUD3" 
							liveChange="createValidation" 
							valueLiveUpdate="true" 
							valueStateText="Geben Sie nicht mehr als 60 Zeichen ein"/>					
				</form:content>							
			</form:SimpleForm>			
		</content>
		<beginButton>
			<Button id="createButton" text="{i18n>inputFieldDialogBeginButton}" type="Accept"  press=".onCreatePress" visible="false" />
		</beginButton>
		<endButton>
			<Button text="{i18n>inputFieldDialogEndButton}"  type="Reject" press=".onCloseViewDialog"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>