<mvc:View 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:core="sap.ui.core" 
    xmlns="sap.m"     
    xmlns:form="sap.ui.layout.form"         
    controllerName="authorization.controller.Wizard" 
    height="100%" >
    <Page           
        title="{i18n>wizardPageTitle}"  
        id="wizardContentPage"        
        navButtonPress=".onNavButtonPressed" 
        showNavButton="true">
        <content>                      
                <Wizard id="createWizard"
                        class="sapUiResponsivePadding--header sapUiResponsivePadding--content"                                                                     
                        complete="wizardCompleteHandler"
                        finishButtonText="Erstellen aller neuen Berechtigungselemente">
                    <WizardStep id="step1" 
                                title="{i18n>wizardTitleStep1}" 
                                activate="step1validation" 
                                validated="false">
                        <VBox class="sapUiSmallMargin">
                        <Title text="Datamart Texts"/>                                
                        <form:SimpleForm editable="true" layout="ResponsiveGridLayout">
                            <form:content>                                
                                <Label text="{i18n>colDatamart}" required="true"/>                                
                                <Input  id="inputDatamart"                                         
                                        liveChange="step1validation" 
                                        valueLiveUpdate="true" 
                                        change="selectDatamartValidation"
                                        valueStateText="Geben Sie nicht mehr als 2 Zeichen ein"/>
                                <!-- <Select id="selectDatamart"  
                                        forceSelection="false"                                        
                                        selectedKey="{datamart}"
                                        selectedItemId="{datamart}"                                                            
                                        items="{
                                            path: '/AUDMART',                                    
                                            parameters: {
                                            $select: 'datamart',                                        
                                                $orderby: 'datamart'
                                            },
                                            sorter: { 
                                                path: 'datamart'
                                            }
                                        }"
                                        change="selectDatamartValidation">
                                    <core:ListItem text="{datamart}" />
                                </Select> -->
                                <Label  text="{i18n>colTxtSh}" />
                                <Input  id="inputTxtSh"                                         
                                        liveChange="step1validation" 
                                        valueLiveUpdate="true" 
                                        valueStateText="Geben Sie nicht mehr als 20 Zeichen ein"/>
                                <Label  required="true" text="{i18n>colTxtMd}" />                            
                                <Input  id="inputTxtMd" 
                                        liveChange="step1validation" 
                                        valueLiveUpdate="true" 
                                        valueStateText="Geben Sie nicht mehr als 40 Zeichen ein"/>
                                <Label  text="{i18n>colTxtLg}" />
                                <Input  id="inputTxtLg" 
                                        liveChange="step1validation" 
                                        valueLiveUpdate="true" 
                                        valueStateText="Geben Sie nicht mehr als 60 Zeichen ein"/>                                
                            </form:content>
                        </form:SimpleForm>
                        <Title text="Datamart vs Provider"/>
                        <Table  id="table1" mode="SingleSelectMaster" >       
                                <headerToolbar>
                                    <Toolbar>
                                        <content>
                                            <Button icon="sap-icon://add" 
                                                    text="{i18n>tableToolbarButtonAdd}" 
                                                    press="onAddPress1"
                                                    type="Accept"/>                                                                                           
                                            <Button icon="sap-icon://delete" 
                                                    type="Reject" 
                                                    text="{i18n>tableToolbarButtonDelete}" 
                                                    press="onDeletePress1"/>                                                                                                                                    
                                        </content>
                                    </Toolbar>
                                </headerToolbar>
                                <columns>
                                    <Column>
                                        <Text text="{i18n>colDatamart}" />
                                    </Column>
                                    <Column>
                                        <Text text="{i18n>colMultiproviderVsDatamart}" />
                                    </Column>                                                                                                                                              
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>                                            
                                            <Text   id="datamartText"/>                                            
                                            <Select id="selectMulti"
                                                    forceSelection="false"                                                                                                                                                       
                                                    items="{
                                                        path: '/CUBE',                                    
                                                        parameters: {
                                                            $select: 'Infocube'
                                                        }
                                                    }"
                                                    change="step1validation">
                                                    <core:Item key="{Infocube}" text="{Infocube}" />
                                            </Select>                                                                                                                                                                                                                                                                                                         
                                        </cells>                                        
                                    </ColumnListItem>
                                </items>
                        </Table>                        
                    </VBox>  
                    </WizardStep>
                    <WizardStep id="step2" title="{i18n>wizardTitleStep2}" activate="step2validation" validated="false">                        
                        <Table  id="table2" mode="SingleSelectMaster" >
                                <headerToolbar>
                                    <Toolbar>
                                        <content>
                                            <Button icon="sap-icon://add" 
                                                    text="{i18n>tableToolbarButtonAdd}" 
                                                    press="onAddPress2"
                                                    type="Accept"/>                                                                                            
                                            <Button icon="sap-icon://delete" 
                                                    type="Reject" 
                                                    text="{i18n>tableToolbarButtonDelete}" 
                                                    press="onDeletePress2"/>                                             
                                        </content>
                                    </Toolbar>
                                </headerToolbar>
                                <columns>
                                    <Column>
                                        <Text text="{i18n>colAUPARNAME}" />
                                    </Column>
                                    <Column>
                                        <Text text="{i18n>colAUZIEL}" />
                                    </Column>
                                    <Column>
                                        <Text text="{i18n>colAUIOBJ}" />
                                    </Column>
                                    <Column>
                                        <Text text="{i18n>colAUIOBJTYP}" />
                                    </Column>                                                                        
                                    <Column>
                                        <Text text="{i18n>colAUSEQUENZ}" />
                                    </Column>                                    
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <Select id="selectInfoAuthName"
                                                    forceSelection="false"                                                                            
                                                    items="{
                                                        path: '/MERKMALE'
                                                    }">
                                                <core:Item key="{Chanm}" text="{Chanm}" />
                                            </Select>                                            
                                            <!-- <Text id="selectCube" />
                                            <Text id="selectIobj" />     -->
                                            <Select id="selectCube"                                                                             
                                                    forceSelection="false"
                                                    items="{
                                                        path: '/CUBE_DIST'
                                                    }">
                                                    <core:Item key="{Partcube}" text="{Partcube}" />
                                                    
                                                </Select> 
                                            <Select id="selectIobj"                                                                           
                                                    forceSelection="false"
                                                        items="{
                                                        path: '/MP_CUBE_IOBJ'
                                                    }">
                                                    <core:Item key="{Iobjnm}" text="{Iobjnm}" />
                                            </Select>                                                                                                                                                                           
                                            <Input  id="inputInfoTyp"                                            
                                                    placeholder="Geben Sie 2 Ziffern ein" 
                                                    type="Number" 
                                                    liveChange="step2validation" 
                                                    valueLiveUpdate="true" 
                                                    valueStateText="Geben Sie nicht mehr als 2 Zahlen ein"/>
                                            <Select id="selectSequenz" 
                                                    forceSelection="false" >
                                                <core:Item text="1" />
                                                <core:Item text="2" />
                                                <core:Item text="3" />
                                            </Select>                                                                                      
                                        </cells>                                        
                                    </ColumnListItem>
                                </items>
                            </Table>
                    </WizardStep>
                    <WizardStep id="step3" title="{i18n>wizardTitleStep3}" activate="step3validation" validated="false">
                                <Table  id="table3" mode="SingleSelectMaster">
                                    <headerToolbar>
                                        <Toolbar>
                                            <content>
                                                <Button icon="sap-icon://add" 
                                                        text="{i18n>tableToolbarButtonAdd}" 
                                                        press="onAddPress3" 
                                                        type="Accept"/>                                                                                               
                                                <Button icon="sap-icon://delete" 
                                                        type="Reject" 
                                                        text="{i18n>tableToolbarButtonDelete}" 
                                                        press="onDeletePress3"/>                                                                                            
                                            </content>
                                        </Toolbar>
                                    </headerToolbar>
                                    <columns>
                                        <Column>
                                            <Text text="{i18n>colAUFKT}" />
                                        </Column>
                                        <Column>
                                            <Text text="{i18n>colAUENTTYP}" />
                                        </Column>
                                        <Column>
                                            <Text text="{i18n>colAUENT}" />
                                        </Column>
                                        <Column>
                                            <Text text="{i18n>colAUWERT}" />
                                        </Column>                                                                       
                                    </columns>
                                    <items>
                                        <ColumnListItem>
                                            <cells>
                                                <Input  id="inputFuntkion" 
                                                        placeholder="Geben Sie 2 Ziffern ein" 
                                                        type="Number" 
                                                        liveChange="step3validation" 
                                                        valueLiveUpdate="true"                                                         
                                                        valueStateText="Geben Sie nicht mehr als 2 Zahlen ein"/>
                                                <Select id="selecttyp" 
                                                        forceSelection="false">
                                                    <core:Item text="D" />
                                                    <core:Item text="I" />
                                                    <core:Item text="S" />                                                        
                                                </Select>
                                                <Input  id="inputentit" 
                                                        liveChange="step3validation" 
                                                        valueLiveUpdate="true" 
                                                        valueStateText="Geben Sie nicht mehr als 60 Zeichen ein"/>
                                                <Input  id="inputwert" 
                                                        liveChange="step3validation" 
                                                        valueLiveUpdate="true" 
                                                        valueStateText="Geben Sie nicht mehr als 60 Zeichen ein"/>                                                                                                                                    
                                            </cells>                                        
                                        </ColumnListItem>
                                    </items>                                
                                </Table>                                
                    </WizardStep>
                    <WizardStep id="step4" title="{i18n>wizardTitleStep4}" activate="step4validation" validated="false">
                                <Table  id="table4" mode="SingleSelectMaster" >
                                    <headerToolbar>
                                    <Toolbar>
                                        <content>
                                            <Button icon="sap-icon://add" 
                                                    text="{i18n>tableToolbarButtonAdd}" 
                                                    press="onAddPress4"
                                                    type="Accept"/>                                                                                          
                                            <Button icon="sap-icon://delete" 
                                                    type="Reject" 
                                                    text="{i18n>tableToolbarButtonDelete}" 
                                                    press="onDeletePress4"/>                                                                                           
                                        </content>
                                    </Toolbar>
                                    </headerToolbar>
                                    <columns>
                                        <Column>
                                            <Text text="{i18n>colPIPEPERID}" />
                                        </Column>
                                        <Column>
                                            <Text text="{i18n>colAUFKT}" />
                                        </Column>                                                                      
                                    </columns>
                                    <items>
                                        <ColumnListItem>
                                            <cells>                                                                                        
                                                <Select id="selectpersonalnummer"
                                                        forceSelection="false"
                                                        items="{
                                                            path: '/PIPEPERID',
                                                            sorter: { path: 'personalnummer' }
                                                        }">
                                                    <core:Item key="{personalnummer}" text="{personalnummer}" />
                                                </Select>                                                
                                                <Select id="selectfunktion"
                                                        forceSelection="false"
                                                        items="{}">
                                                    <core:Item key="" text="" />
                                                </Select>                                                                                                                                      
                                            </cells>                                        
                                        </ColumnListItem>
                                    </items>
                                </Table>                         
                    </WizardStep>
                </Wizard>            
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button text="{i18n>wizardFooterButton}" type="Reject" press="handleWizardCancel"/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>








